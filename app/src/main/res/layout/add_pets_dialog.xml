<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/PetHeading"
        android:layout_width="342dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Add Pet"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/PetType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <EditText
        android:id="@+id/PetType"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:hint="Pet Type"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="61dp" />

    <EditText
        android:id="@+id/PetName"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Name"
        app:layout_constraintTop_toBottomOf="@+id/PetType"
        tools:layout_editor_absoluteX="18dp" />

    <EditText
        android:id="@+id/PetDescription"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Description"
        app:layout_constraintTop_toBottomOf="@+id/PetName"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/Add"
        android:layout_width="333dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Add "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PetDescription"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>